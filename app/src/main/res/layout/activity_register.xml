<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imagePrincipal"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/imagenprincipal2"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ImagenLogin"
        android:layout_width="173dp"
        android:layout_height="188dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextLogUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imagePrincipal"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal"
        app:srcCompat="@drawable/logouniforme" />

    <EditText
        android:id="@+id/editTextUsuario"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:text="Usuario"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:hint="correo"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

    <EditText
        android:id="@+id/editTextDireccion"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="428dp"
        android:ems="10"
        android:hint="Direcci칩n"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="496dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

    <Button
        android:id="@+id/Registro"
        android:layout_width="203dp"
        android:layout_height="51dp"
        android:layout_marginTop="636dp"
        android:text="Registrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesi칩n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="702dp" />

    <EditText
        android:id="@+id/editTextContrase침a"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="568dp"
        android:ems="10"
        android:hint="Constrase침a"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePrincipal" />

</androidx.constraintlayout.widget.ConstraintLayout>